{
  "name": "my-theme",
  "version": "0.0.1",
  "author": {
    "email": "theme@example.org"
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "config": {
    "posts_per_page": 3,
    "custom": {
      "unknown": {
        "type": "color",
        "group": "post",
        "default": "#FFffFF"
      },
      "unknown2": {
        "type": "image",
        "group": "homepage"
      },
      "typography": {
        "type": "boolean",
        "default": true
      },
      "no_default": {
        "type": "select",
        "options": ["one", "two"],
        "default": "one"
      },
      "title": {
        "type": "text",
        "description": "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quisquam, voluptatem."
      }
    }
  }
}
